<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tcc.iesgo.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.STATUS_BAR_SERVICE" android:protectionLevel="signature" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:description="@string/description"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        
        <uses-library android:name="com.google.android.maps" />
        
        <activity
            android:name=".PresentationActivity"
            android:configChanges="orientation"
            android:screenOrientation="user"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="tcc.iesgo.activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.RegisterActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.RegisterContinueActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.HelpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.MainTabActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.ClientMapActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.RecordsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.FavoritesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.TaximeterActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.activity.ConfigurationActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:name="tcc.iesgo.overlay.RoutePath"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="user"
            android:theme="@android:style/Theme.NoTitleBar" />
                
    </application>
</manifest>